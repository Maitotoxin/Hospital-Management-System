<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>HMS {{staff_id}} Medicine Info Display</title>
    <meta name="author" content="">
    <script src="/js/cookie.js"></script>
    
        

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts
  <script src="/js/demo/chart-area-demo.js"></script>
  <script src="/js/demo/chart-pie-demo.js"></script>
  -->
 

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/supersidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/supertopbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Rearrange Appointment</h1>
          </div>
          <form action="/staff/curePatientMedicine" method="post" id="registerForm">

          
              <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Medicine Information Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              
              <th>Medicine ID</th>
              <th>Medicine Name</th>
              <th>Description</th>
              <th>Price</th>
              
              
            </tr>
          </thead>
          <tfoot>
            <tr>
              
              <th>Medicine ID</th>
              <th>Medicine Name</th>
              <th>Description</th>
              <th>Price</th>
              
            </tr>
          </tfoot>
          <tbody>
            {{each medicineInfo}}
            <tr>
              
              <td>{{$value.medicine_id}}</td>
              <td>{{$value.medicine_name}}</td>
              <td>{{$value.description}}</td>
              <td>{{$value.price}}</td>
              
            </tr>
            {{/each}}
          </tbody>
        </table>
          
             
          </form>
          <!-- Content Row -->
     
          
          

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>

</html>
