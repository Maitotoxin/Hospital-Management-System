<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/supersidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/supertopbar.art'}}
        <!-- End of Topbar -->
           

        <!-- Begin Page Content -->
        <div class="container-fluid">
        <input type="hidden" id="invoice_id" value={{invoiceInfo[0].invoice_id}}>
          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Make Diagnosis</h1>
          </div>
          <form action="/staff/curePatientIcd" method="post" id="registerForm">
             <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Treatment Record Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>ICD ID</th>
              <th>Disease Name</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
            {{each patientIcdRecordInfo}}
            <tr>
              <td>{{$value.icd_id}}</td>
              <td>{{$value.disease_name}}</td>
              <td>{{$value.last_update}}</td>
              
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
          <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Select Treatment</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th></th>
              <th>ICD ID</th>
              <th>Disease Name</th>
              <th>Description</th>
            </tr>
          </thead>
         
          <tbody>
            {{each icdInfo}}
            <tr>
              <td>
                <input type="checkbox" id="icd_id" name="icd_id" value={{$value.icd_id}}>
              </td>
              <td>{{$value.icd_id}}</td>
              <td>{{$value.disease_name}}</td>
              <td>{{$value.description}}</td>
              
            </tr>
            {{/each}}
          </tbody>
        </table>
        
               
               
               <input type="submit" href="error" class="btn btn-primary btn-user btn-block"
                                    value="Submit Disease Selection">
                <div>
          <hr>
                <div align="left" style="float:left">
                  <a href="curePatient" class="btn btn-primary btn-icon-split btn-sm use-address2" >
                    <span class="icon text-white-50">
                      <i class="fas fa-arrow-left"></i>
                    </span>
                    <span class="text">Back to Appointment List</span>
                  </a>
                </div>                  
                <div align="right">
                  <a href="curePatientTreatment" class="btn btn-primary btn-icon-split btn-sm use-address2" >
                    <span class="icon text-white-50">
                      <i class="fas fa-arrow-right"></i>
                    </span>
                    <span class="text">Go to Treatment Selection</span>
                  </a>
                </div>
                </div>
                <hr>
          <!-- Content Row -->
          </form>
     
          
          

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>

</html>
