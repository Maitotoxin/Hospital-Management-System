<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>Patient Cure</title>
    <meta name="author" content="">
    <script src="/js/cookie.js"></script>
    <script>
         $(document).ready(function() {
                $('#dataTable1').DataTable();
              });
        /*function getcookie() {
            console.log(getCookie("staff"));
            console.log(getCookie("patient"));
            //if user did not enter userid or password
            
        }*/
        function registerUser() {
           // getCookie("staff");
            //getCookie("patient");
            var res = formContentToJson($("#registerForm"));
            var invoice_id=getElementById("invoice_id");
            setCookie("invoice_id",invoice_id,1);
            return validateAppointmentRegisterInput(res);
            //return true;
        }

        //cookie.delCookie("patient");
    </script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts
  <script src="/js/demo/chart-area-demo.js"></script>
  <script src="/js/demo/chart-pie-demo.js"></script>
  -->
 

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/supersidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/supertopbar.art'}}
        <!-- End of Topbar -->
           

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Make Diagnosis</h1>
          </div>
          <form action="/staff/curePatientMedicine" method="post" id="registerForm">
             <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Disease Record Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>ICD ID</th>
              <th>Disease Name</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
            {{each patientIcdRecordInfo}}
            <tr>
              <td>{{$value.icd_id}}</td>
              <td>{{$value.disease_name}}</td>
              <td>{{$value.last_update}}</td>
              
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
          <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Make Diagnosis</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th></th>
              <th>ICD ID</th>
              <th>Disease Name</th>
              <th>Description</th>
            </tr>
          </thead>
         
          <tbody>
            {{each icdInfoCure}}
            <tr>
              <td>
                <input type="checkbox" id="icd_id" name="icd_id" value={{$value.icd_id}}>
              </td>
              <td>{{$value.icd_id}}</td>
              <td>{{$value.disease_name}}</td>
              <td>{{$value.description}}</td>
              
            </tr>
            {{/each}}
          </tbody>
        </table>
        
          <input type="hidden" id="invoice_id" value={{invoiceInfo.invoice_id}}>
               
               <input type="reset" href="error" class="btn btn-primary btn-user btn-block"
                                    value="Finish Diagnosis" onclick="return registerUser()">
                <hr>
               <input type="submit" href="curePatientTreatment" class="btn btn-primary btn-user btn-block"
                                    value="Go To Treatment">
                <hr>
          <!-- Content Row -->
     
          
          

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>

</html>
