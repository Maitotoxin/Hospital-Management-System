           <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Diagnosis Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable2" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>ICD ID</th>
              <th>Disease Name</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
            {{each patientIcdInfo}}
            <tr>
              <td>{{$value.icd_id}}</td>
              <td>{{$value.disease_name}}</td>
              <td>{{$value.last_update}}</td>
              <td>
              <form method="post">
                  <input type="hidden" name="invoice_id" id="invoice_id" value="">
                  <input type="hidden" name="icd_id" id="icd_id" value={{$value.icd_id}}>
                  <i class="fas fa-trash"></i>
                  <input type="submit" value="Delete">
                </form>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>

         
          
          <div class="container-fluid">
           <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center">
            <h1 class="h3 mb-2 text-gray-800">Treatment Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>Treatment ID</th>
              <th>Treatment Name</th>
              <th>Times</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
            {{each patientTreatmentInfo}}
            <tr>
              <td>{{$value.treatment_id}}</td>
              <td>{{$value.treatment_name}}</td>
              <td>{{$value.times}}</td>
              <td>{{$value.last_update}}</td>
              <td>
              <form method="post">
                  <input type="hidden" name="invoice_id" id="invoice_id" value="">
                  <input type="hidden" name="icd_id" id="icd_id" value={{$value.treatment_id}}>
                  <i class="fas fa-trash"></i>
                  <input type="submit" value="Delete">
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Prescription Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>Medicine ID</th>
              <th>Medicine Name</th>
              <th>Amount</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
