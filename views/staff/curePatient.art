                  <input id="appointment_id" type="hidden" name="appointment_id" value={{$value.appointment_id}}>
                  <input type="submit" id="function_switch" class="use-address" name="function_switch" onclick="change()" value="1">Check Medical Record 
                  <button  id="function_switch" name="function_switch"  value="2"> Begin</button>
                </form>
                  
                
                  
                
