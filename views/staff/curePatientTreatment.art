</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/supersidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/supertopbar.art'}}
        <!-- End of Topbar -->
           

        <!-- Begin Page Content -->
        

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Make Treatment</h1>
          </div>
          <form action="/staff/curePatientTreatment" method="post" id="registerForm">
            <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Treatment Record Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>Treatment ID</th>
              <th>Treatment Name</th>
              <th>Times</th>
              <th>Time</th>
            </tr>
          </thead>
         
          <tbody>
            {{each patientTreatmentRecordInfo}}
            <tr>
              <td>{{$value.treatment_id}}</td>
              <td>{{$value.treatment_name}}</td>
              <td>{{$value.times}}</td>
              <td>{{$value.last_update}}</td>
              
            </tr>
            {{/each}}
          </tbody>


        </table>
          </div>
           <input type="hidden" id="invoice_id" value="">
          <div class="container-fluid">
              <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Medicine List</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th> </th>
              <th>Treatment ID</th>
              <th>Treatment Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Input Amount</th>
              
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th> </th>
              <th>Medicine ID</th>
              <th>Medicine Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Input Amount</th>
            </tr>
          </tfoot>
          <tbody>
            {{each medicineInfoCure}}
            <tr>
              <td>
                <input type="checkbox" id="treatment_id" name="treatment_id" value={{$value.treatment_id}}>
              </td>
              <td>{{$value.treatment_id}}</td>
              <td>{{$value.treatment_name}}</td>
              <td>{{$value.description}}</td>
              <td>{{$value.price}}</td>
              <td>
                
                  <input id="times" type="text" name="times" value="">
                
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
          </div>
               <script>
                        var s_no=getCookie("invoice_id");
                        //var p_no=getCookie("patient");
                        
                        //console.log("b"+p_no);
                        document.getElementById("invoice_id").value = s_no;
                        //alert(document.getElementById('staff_no').value);
                        
                        //alert(document.getElementById('patient_id').value);
                </script>
               <input type="reset" href="error" class="btn btn-primary btn-user btn-block"
                                    value="Use this Medicine" onclick="return registerUser()">
                <hr>
                <input type="submit" href="curePatientIcd" class="btn btn-primary btn-user btn-block"
                                    value="Go Back To Diagnosis">
                <hr>
                <input type="submit" href="curePatientMedicine" class="btn btn-primary btn-user btn-block"
                                    value="Finish">
                <hr>
          </form>
          <!-- Content Row -->
     
          
          

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>

</html>
