<html>

<head>
   
    {{include '../common/header.art'}}

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <title>Patient-Register</title>
    <meta name="author" content="">
    <script type="text/javascript">
       function getCookie(name) {
           var arr;
           var reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
           if (arr = document.cookie.match(reg)){
               return arr[2];
            }
            else
            return null;
           }
        /*function getcookie() {
            console.log(getCookie("staff"));
            console.log(getCookie("patient"));
            //if user did not enter userid or password
            
        }*/
        function registerAppointment() {
           // getCookie("staff");
            //getCookie("patient");
            var res = formContentToJson($("#registerForm"));
            //if user did not enter userid or password
            return validateAppointmentRegisterInput(res);
        }
    </script>
    <style>
        body {
            background-color: #303641;
        }
    </style>
</head>
<body class="bg-gradient-primary">

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Make</h1>
                            </div>

                            <form action="/patient/dashboard" method="post" id="registerForm">
                                <div class="mbsc-col-sm-12 mbsc-col-lg-6">
                                   <label>
                                     Appointment Time
                                <input mbsc-input data-input-style="box" type="datetime-local" data-label-style="stacked" name="appointment_time" class="form-control" id="appointment_time" >
                                   </label>
                                </div>

                               <!--input mbsc-input data-input-style="box" data-label-style="stacked" name="appointment_time" class="form-control" id="appointment_time" -->                               
                                <input type="hidden" name="staff_no" value={${getCookie("staff")}}>
                                <input type="hidden" name="patient_id" value={${getCookie("patient")}}>
                                <input type="submit" href="error" class="btn btn-primary btn-user btn-block"
                                    value="Register" onclick="return registerAppointment()">
                                <hr>
                            </form>
                            <hr>
                           

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
