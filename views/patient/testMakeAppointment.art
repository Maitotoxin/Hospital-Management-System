<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>HMS {{patient_id}} Test Appointment</title>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>
  <script src="/js/cookie.js"> </script>
  <meta name="author" content="">
            <script>
                  
                   $(document).ready(function(){
           $(".use-address").click(function() {
                    var row = $(this).closest("tr");    // Find the row
                    var t_id = row.find(".test_id").text(); // Find the text
                    var t_name = row.find(".test_name").text();
                    //alert("here 1");
                    //var exp = new Date();
                    //exp.setTime(exp.getTime()+(1*24*60*60*1000));
                    //document.cookie = "staff=" + s_no+";expires=" + exp.toUTCString();
                    setCookie("test_id",t_id,1);
                    //document.cookie = "patient=" + p_no+";expires=" + exp.toUTCString();

                     //setCookie("patient",p_no,1);
                     setCookie("test_name",t_name,1);
                     //alert("here 2");
                     //setCookie("first_name",f_name,1);
                   // document.cookie = "patient=" + escape(p_no.value)+ ";path=/doctorAppointmentTime/;expires=" + exp.toUTCString();
                    location.href = 'labMakeAppointment';
                  });
                   });
         </script>

  

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/sidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/topbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <!-- Page Heading -->
        <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Test Information Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">



          <thead>
            <tr>
              <th>Test ID</th>
              <th>Test Name</th>
              <th>Description</th>
              <th>Price</th>
              <th> </th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Test ID</th>
              <th>Test Name</th>
              <th>Description</th>
              <th>Price</th>
              <th> </th>
            </tr>
          </tfoot>
          <tbody>
            {{each patientTestInfo}}

            <tr>
              <td class ="test_id">{{$value.test_id}}</td>
              <td class="test_name">{{$value.test_name}}</td>
              <td>{{$value.description}}</td>
              <td>${{$value.price}}</td>
              <td>
                 <button class="use-address"> Choose this test</button>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        </div>


          




        <!-- /.container-fluid -->
      </div>
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>
</html>