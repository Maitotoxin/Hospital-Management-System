<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>HMS {{patient_id}} Doctor Appointment</title>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

 
  <meta name="author" content="">

  <!--
  <script>
    function registerHome() {
      var res = formContentToJson($("#registerForm"));
      //if user did not enter userid or password
      return validateHomeInput(res);
    }
  </script>
  -->

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/sidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/topbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <!-- Page Heading -->
          <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Doctor Information Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>Doctor ID</th>
              <th>Doctor First Name</th>
              <th>Doctor Last Name</th>
              <th>Gender</th>
              <th>Phone Number</th>
              <th>Doctor Description</th>
              <th> </th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Doctor ID</th>
              <th>Doctor First Name</th>
              <th>Doctor Last Name</th>
              <th>Gender</th>
              <th>Phone Number</th>
              <th>Doctor Description</th>
              <th> </th>
            </tr>
          </tfoot>
          <tbody>
            {{each patientDoctorInfo}}
            <tr>
              <td>{{$value.staff_no}}</td>
              <td>{{$value.first_name}}</td>
              <td>{{$value.last_name}}</td>
              <td>{{$value.gender}}</td>
              <td>{{$value.phone}}</td>
              <td>{{$value.description}}</td>
              <td>
                <form> 
                  <input id="staff_no" type="hidden" name="staff_no" value={{$value.staff_no}}>
                  <input id="patient_id" type="hidden" name="patient_id" value={{patient_id}}>
                  <!--input type="submit" value="appoint"-->
                  <button onclick="appointment()", href='doctorAppointmentTime'> Appointment </button>

                  <script>
                  function appointment(){
                    var s_no=document.getElementByid("staff_no");
                    var p_no=document.getElementByid("patient_id");
                    document.cookie = "staff=" + s_no;
                    document.cookie = "patient=" + p_no;
                    //location.href = 'doctorAppointmentTime';
                  }
                  </script>

                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        </div>


          



        

        <!-- /.container-fluid -->
      </div>
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>