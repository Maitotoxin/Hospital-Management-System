<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/sidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/topbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <!-- Page Heading -->
          <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Doctor Appointment Display</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


          <thead>
            <tr>
              <th>Appointment ID</th>
              <th>Doctor Staff No.</th>
              <th>Doctor First Name</th>
              <th>Doctor Last Name</th>
              <th>Appointment Time</th>
              <th>Estimated Duration</th>
              <th>Appointment Status</th>
              <th> </th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Appointment ID</th>
              <th>Doctor Staff No.</th>
              <th>Doctor First Name</th>
              <th>Doctor Last Name</th>
              <th>Appointment Time</th>
              <th>Estimated Duration</th>
              <th>Appointment Status</th>
              <th> </th>
            </tr>
          </tfoot>
          <tbody>
            {{each patientDoctorAppointmentInfo}}
            <tr>
              <td>{{$value.appointment_id}}</td>
              <td>{{$value.staff_no}}</td>
              <td>{{$value.first_name}}</td>
              <td>{{$value.last_name}}</td>
              <td>{{$value.appointment_time}}</td>
              <td>{{$value.estimated_duration}} minutes</td>
              <td>{{$value.valid}}</td>
              <td>
                <form> 
                  <input id="appointment_id" type="hidden" name="appointment_id" value={{$value.appointment_id}}>
                  <input id="first_name" type="hidden" name="first_name" value={{$value.first_name}}>
                  <input id="last_name" type="hidden" name="last_name" value={{$value.last_name}}>
                  <!--input id="patient_id" type="hidden" name="patient_id" value={{patient_id}}-->
                  <!--input type="submit" value="appoint"-->
                  <a type="submit"  onclick="appointment()"> Edit </a>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        </div>

        <!-- /.container-fluid -->
      </div>
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

