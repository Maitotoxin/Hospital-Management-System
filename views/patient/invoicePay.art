<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../../common/header.art'}}
  <title>HMS {{patient_id}} Invoice Payment</title>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>


  <meta name="author" content="">

  <!--
  <script type="text/javascript">
    function show(leftamount) {
      console.log(leftamount);
      document.getElementById("leftamount").innerHTML = leftamount;
    }
  </script>
  -->


</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../../common/sidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../../common/topbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Invoice Payment</h1>
          </div>

          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Fill in the Blanks to Purchase Invoice</h1>
                            </div>

                            <form method="post" id="registerForm">



                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <label class=""> <b>Choose the invoice you want to pay for</b> </label>
                                    </div>
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                      <select name="invoice_id" id="invoice_id" class="form-control" >
                                        <option value="" selected disabled> -Please Select- </option>
		                                    {{each invoiceInfo}}
			                                    <option value = {{$value.invoice_id}}>InvoiceID: {{$value.invoice_id}} &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Amount not paid: ${{$value.leftamount}}</option>
			                                  {{/each}}
		                                  </select>
                                    </div>

                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <label class=""> <b>Fill in the amount you want to pay for this payment</b> </label>
                                    </div>
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                      <input name="amount" class="form-control" id="amount" placeholder="Payment Amount"
                                        type=number>
                                    </div>

                                     <div class="col-sm-12 mb-3 mb-sm-0">
                                        <label class=""> <b>Payment method you want to use</b> </label>
                                    </div>
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                      <select name="payment_method" id="payment_method" class="form-control" >
                                        <option value="" selected disabled> -Please Select- </option>
                                        <option value="PayPal"> PayPal </option>
                                        <option value="Credit"> Credit </option>
                                        <option value="Debit"> Debit </option>
                                        <option value="Check"> Check </option>

		                                  </select>
                                    </div>
                              
 

                                </div>

                                <input type="submit" href="dashboard" class="btn btn-primary btn-user btn-block"
                                    value="Pay for the Invoice">
                                <hr>
                            </form>
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>


          



        

        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>